<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_item_list"
              android:orientation="vertical">

    <View
        android:id="@+id/top_line"
        style="@style/item_list_divider"
        android:layout_marginLeft="70dip"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:minHeight="71dip">

        <FrameLayout
            android:id="@+id/portrait_panel"
            android:layout_width="70dip"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/space_49"
                android:layout_height="@dimen/space_49"
                android:layout_gravity="center_vertical"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/transparent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/unread_number_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="4dp"
                android:background="@drawable/red_hot"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/new_message_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_hot"
                android:contentDescription=""
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginTop="16dip"
            android:layout_toRightOf="@id/portrait_panel"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/main_title_color"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/img_msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nickname"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/portrait_panel"
            android:contentDescription="@string/empty"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nickname"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_msg_status"
            android:autoLink="none"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/main_sub_color"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="16dip"
            android:textColor="@color/main_sub_color"
            android:textSize="@dimen/text_size_10"/>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/item_list_divider"
        android:layout_marginLeft="70dip"/>

</LinearLayout>